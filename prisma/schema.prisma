generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AuthType {
  GOOGLE
  EMAIL
}

model Email {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  authType     AuthType
  userId       Int
  priority     Int?
  activatedAt  DateTime?
  createdAt    DateTime  @default(now())
  
  @@map("emails")
}

model User {
  id        String    @id @default(cuid())
  uid       String    @unique
  passwd    String?
  name      String?
  email     String?   @unique
  image     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  emailVerified DateTime?
  
  accounts Account[]
  sessions Session[]
  
  @@map("users")
}

model Group {
  id            Int      @id @default(autoincrement())
  parentGroupId Int?     @map("parent_group_id")
  name          String
  description   String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  parent   Group?  @relation("GroupHierarchy", fields: [parentGroupId], references: [id])
  children Group[] @relation("GroupHierarchy")
  
  @@map("groups")
}

model GroupUser {
  id        Int      @id @default(autoincrement())
  userId    Int
  groupId   Int
  role      Int
  joinedAt  DateTime @default(now())
  
  @@map("group_users")
}

model Place {
  id        Int     @id @default(autoincrement())
  name      String
  latitude  Float?
  longitude Float?
  
  @@map("places")
}

model ActivityTemplate {
  id          Int    @id @default(autoincrement())
  name        String
  description String?
  whenType    Int
  when        String
  placeId     Int?
  
  @@map("activity_templates")
}

model Activity {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  startedAt   DateTime
  finishedAt  DateTime?
  placeId     Int?
  
  @@map("activities")
}

model ActivityGroup {
  id         Int @id @default(autoincrement())
  activityId Int
  groupId    Int
  
  @@map("activity_groups")
}

model ActivityUser {
  id         Int @id @default(autoincrement())
  activityId Int
  userId     Int
  status     Int
  
  @@map("activity_users")
}

// NextAuth.js models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}
